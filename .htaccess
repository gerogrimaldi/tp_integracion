<IfModule mod_rewrite.c>
RewriteEngine On

# Permitir acceso directo a index.php y la raíz
RewriteCond %{REQUEST_URI} ^/$ [OR]
RewriteCond %{REQUEST_URI} ^/index\.php$ [OR]

# Permitir acceso a cualquier archivo dentro de /css/ o /js/
RewriteCond %{REQUEST_URI} ^/css/ [OR]
RewriteCond %{REQUEST_URI} ^/js/ [OR]

# Permitir acceso a la página de error para evitar bucle
RewriteCond %{REQUEST_URI} ^/view/error\.php$

# Si NO se cumple ninguna de las condiciones anteriores → bloquear
RewriteRule ^.*$ - [L]

# Bloquear todo lo demás (no index ni error.php)
RewriteRule ^.*$ - [R=404,L]

# Página de error personalizada
ErrorDocument 404 /view/error.php
</IfModule>